# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME=UNICX Integration

# Database Configuration - Azure CosmosDB Mongo API
MONGODB_URI=mongodb://localhost:27017/unicx-integration
COSMOS_DB_CONNECTION_STRING=mongodb://your-account:your-key@your-account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000
COSMOS_DB_NAME=unicx-integration
DATABASE_MAX_POOL_SIZE=50
DATABASE_MIN_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for Bull queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Email Configuration (SendGrid or SMTP)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM_NAME=UNICX
EMAIL_FROM_ADDRESS=noreply@unicx.com

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# QR Code Configuration
QR_CODE_EXPIRY_HOURS=24
QR_CODE_ENCRYPTION_KEY=your-qr-encryption-key-32-chars-min
QR_CODE_MAX_RETRY_ATTEMPTS=3
QR_CODE_IMAGE_FORMAT=png
QR_CODE_SIZE=300

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ID=your-business-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum
CORS_ORIGIN=http://localhost:3000,https://app.unicx.com
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# File Storage (Azure Blob or AWS S3)
STORAGE_PROVIDER=azure
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=unicx-files
AWS_S3_BUCKET=unicx-files
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ENABLE_SWAGGER=true

# Cleanup Jobs
AUDIT_LOG_RETENTION_DAYS=90
QR_CODE_CLEANUP_DAYS=7
FAILED_INVITATION_CLEANUP_DAYS=14

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_EXTERNAL_AUTH_PROVIDERS=false


